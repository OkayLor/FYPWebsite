<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Owned games</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/navbar.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <style>
        #owned-games-list {
            margin: 20px 0;
        }

        .game-container {
            border: 1px solid #ddd;
            border-radius: 5px;
            padding: 20px;
            margin-bottom: 10px;
            background-color: #fff;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .game-container h3 {
            font-size: 18px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 10px;
        }

        .game-container p {
            font-size: 16px;
            text-align: center;
            margin-bottom: 0;
        }

        .owned-checkbox {
            transform: scale(1.3);
        }

        #deleteOwnedBtn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <div class="container my-4">
        <div class="d-flex justify-content-end mb-3">
            <button id="deleteOwnedBtn" class="btn btn-danger" disabled>Delete Selected</button>
        </div>
        <!-- Owned Games List -->
        <div id="owned-games-list"></div>
        <!-- Text for when there are no owned games -->
        <p id="no-games-text" style="display: none; text-align: center;">You do not own any game.</p>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"></script>
    <script src="/js/ownedGames.js"></script>
    <script src="/js/login.js"></script>
</body>

</html>
