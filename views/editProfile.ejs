<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RP Games</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css">
    <link rel="stylesheet" href="./css/editprofile.css">
    <link rel="stylesheet" href="./css/navbar.css">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        #file-selected-text {
            display: none;
        }
    </style>
</head>

<body>
    <!-- Navbar -->
    <%- include('partials/navbar') %>
    <!-- Profile Update Form -->
    <div class="container">
        <div class="row">
            <!-- Image Column -->
            <div class="col-lg-4 col-md-12 order-sm-1 mb-4">
                <div class="profile-image-container">
                    <img id="profile_pic_url" src="" alt="User Image" class="img-fluid">
                    <div class="overlay">
                        <div class="file-input-container">
                            <!-- Updated ID for the file input element -->
                            <input type="file" id="profile_pic_input" accept="image/*" class="image_input">
                            <label for="profile_pic_input">Choose Image</label>
                        </div>
                    </div>
                </div>
            </div>
            <div id="file-selected-text"></div>


            <!-- Details Column -->
            <div class="col-lg-8 col-md-12 order-sm-2 order-xs-2">
                <h2 class="mb-4">Edit Profile</h2>
                <form id="update_form" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="username_profile" class="form-label"><b>Username</b></label>
                        <input type="text" name="username_profile" id="username_profile" class="form-control"
                            placeholder="Username">
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label"><b>Email</b></label>
                        <input type="email" name="email" id="email" class="form-control" placeholder="Email">
                    </div>

                    <div class="mb-3">
                        <label for="current_password" class="form-label"><b>Current Password</b></label>
                        <input type="password" name="current_password" id="current_password" class="form-control"
                            placeholder="Current Password">
                    </div>

                    <div class="mb-3">
                        <label for="new_password" class="form-label"><b>New Password</b></label>
                        <input type="password" name="new_password" id="new_password" class="form-control"
                            placeholder="New Password">
                    </div>

                    <div class="mb-3">
                        <label for="type" class="form-label"><b>Type</b></label>
                        <input type="text" name="type" id="type" class="form-control" placeholder="Type" readonly>
                    </div>

                    <!-- Add the Reset Image button here -->
                    <div class="mb-3">
                        <button type="button" id="btn_reset_image" class="btn btn-secondary">Reset Image</button>
                    </div>

                    <button type="submit" id="btn_update" class="btn btn-primary">Update</button>
                    <button type="button" id="btn_back" class="btn btn-secondary">Back to Store</button>
                </form>
            </div>
        </div>
    </div>


    <script src="/js/editprofile.js"></script>
    <script src="/js/login.js"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet">
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.bundle.min.js"></script>

</body>